{
  "manifest_version": 2,
  "name": "tickety-tick",
  "version": "5.0.1",
  "description": "A browser extension that helps you to create commit messages and branch names from story trackers.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "applications": {
    "gecko": {
      "id": "jid1-ynkvezs8Qn2TJA@jetpack"
    }
  },
  "background": {
    "scripts": ["background/index.ts"]
  },
  "content_scripts": [
    {
     "matches": [
       "http://*/*",
       "https://*/*"
     ],
     "js": ["content/index.ts"]
    }
  ],
  "web_accessible_resources": [
  ],
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "browser_action": {
    "default_title": "Git Branch/Message",
    "default_popup": "popup/index.html",
    "default_icon": {
      "64": "icons/icon-64.png",
      "32": "icons/icon-32.png",
      "16": "icons/icon-16.png"
    },
    "theme_icons": [
      {
        "light": "icons/icon-light-64.png",
        "dark": "icons/icon-64.png",
        "size": 64
      },
      {
        "light": "icons/icon-light-32.png",
        "dark": "icons/icon-32.png",
        "size": 32
      },
      {
        "light": "icons/icon-light-16.png",
        "dark": "icons/icon-16.png",
        "size": 16
      }
    ]
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "MacCtrl+T"
      }
    }
  },
  "content_security_policy": "default-src 'none'; img-src 'self' data:; style-src 'self'; script-src 'self';"
}
